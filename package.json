{
  "name": "@react-mapboxgl/repo",
  "private": true,
  "standard": {
    "parser": "babel-eslint"
  },
  "scripts": {
    "install": "yarn run bootstrap",
    "test": "yarn run exec -- yarn run test",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "exec": "lerna exec --concurrency 1",
    "clean": "lerna run clean",
    "do": "./tools/module-do",
    "nuke": "yarn run clean && lerna clean --yes",
    "reinstall": "yarn run nuke && yarn run exec yarn && yarn run lerna bootstrap",
    "storybook": "NODE_ENV=develop BABEL_ENV=storybook start-storybook -p 3005 -c ./tools/.storybook",
    "docs": "BABEL_ENV=commonjs build-storybook -c ./tools/.storybook -o ./docs",
    "view-coverage": "./tools/view-coverage"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.0.0",
